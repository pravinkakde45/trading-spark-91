{
  "name": "trading-platform-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for online trading platform",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
