    "@fastify/rate-limit": "^9.1.0",
    "@fastify/swagger": "^8.13.0",
    "@fastify/swagger-ui": "^2.1.0",
    "@fastify/websocket": "^10.0.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^4.28.1",
    "pg": "^8.12.0",
    "redis": "^4.7.0",
    "ws": "^8.18.0",
    "zod": "^3.23.8",
    "axios": "^1.7.7",
    "crypto-js": "^4.2.0",
    "pino": "^8.21.0",
    "pino-pretty": "^11.2.2",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^22.7.5",
    "@types/pg": "^8.11.6",
    "@types/ws": "^8.5.13",
    "@types/crypto-js": "^4.2.2",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.1.3",
    "@vitest/coverage-v8": "^2.1.3"
